!!!
%html{class: yield_content(:html_classes), :manifest => "cache.manifest"}
  = # The order of the below head lines matters
  %head
    %meta{"charset"=>"utf-8"}
    %meta{"content"=>"IE=edge,chrome=1", "http-equiv"=>"X-UA-Compatible"}
    %meta{"name" => "viewport", :content => "user-scalable=yes, initial-scale=1, width=device-width, minimal-ui"}
    = # Use the title from a page's frontmatter if it has one
    %title= current_page.data.title || 'Middleman'

    = stylesheet_link_tag "site"
    = javascript_include_tag "site"

    = yield
